<div class="navbar-brand">
    <a href="">
        <img src="images/logo.svg"/>
    </a>
</div>

<div class="navbar-menu">
    <ul class="nav-list">
        <li class="nav-item">
            <NavLink class="nav-href" href="" Match="NavLinkMatch.All">
                <div class="nav-link">
                    @(new MarkupString(StatusUpSvg))
                    <p class="font-body__xs__regular">Главная</p>
                </div>
            </NavLink>
        </li>
