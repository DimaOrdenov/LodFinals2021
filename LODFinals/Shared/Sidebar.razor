        {
            ("/photos", GalleryFavourite, "Фотографии"),
            ("/posts", LikeTag, "Публикации"),
            ("/comments", DocumentText, "Комментарии"),
        })
        {
            <li class="nav-item">
                <NavLink class="nav-href" href="@(link)">
                    <div class="nav-link">
                        @(new MarkupString(icon))
                        <p class="font-body__xs__regular">@text</p>
                    </div>
                </NavLink>
            </li>
        }
    </ul>
</div>

